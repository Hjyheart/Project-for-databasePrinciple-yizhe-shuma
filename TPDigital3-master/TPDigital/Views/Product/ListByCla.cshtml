
@{
    ViewBag.Title = "ListByCla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var productList = ViewBag.productList;
}
<!--瀑布流-->
<section class="am-center">
    <button class="am-btn am-btn-primary am-center" style="width:100%;">
        <h3>共找到@(productList.Count)结果</h3>
    </button>
    <br />
    <div class="am-g">
        @if (productList.Count > 0)
        {
            for (int k = 0; k < productList.Count; k++)
            {
                <div class="am-u-lg-6 am-u-sm-centered">
                    <div>
                        <div class="am-panel am-panel-default am-scrollspy-init am-scrollspy-inview am-animation-fade" data-am-scrollspy="{animation: 'fade', delay:100}">
                            <div class="am-panel-bd">
                                <a href="/Product/Show/@productList[k].ID">
                                    <img src="@productList[k].ProductImageList[0].Image.URL" style="width:100%;height:80%" />
                                </a>
                            </div>
                            <div class="am-panel-footer" style="padding:5px;">
                                <div>
                                    <div class="am-cf">
                                        <p class="am-align-left am-text-danger" style="margin:0;">￥@productList[k].Price</p>

                                    </div>
                                    <h2 style="margin:0;"><a href="/Product/Show/@productList[k].ID">@productList[k].Name</a></h2>
                                    <p style="margin:0;">@productList[k].Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <br />
                <hr />
        }
        }
    </div>
</section>

