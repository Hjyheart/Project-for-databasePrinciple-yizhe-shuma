@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="am-g">
    <div class="am-u-sm-8 am-u-sm-centered">
        <div class="am-cf am-text-center">
            <p style="font-size:40px">@(ViewBag.activity.Name)</p>
        </div>

        <div class="am-g">
            <div class="am-slider am-slider-default am-u-sm-centered" data-am-flexslider id="demo-slider-0" style="max-height:420px;max-width:1200px">
                <ul class="am-slides">
                    @for (int i = 0; i < @ViewBag.activityImages.Count; i++)
                    {
                        <li>
                            <img src="@ViewBag.activityImages[i].URL" style="max-height:420px;" />
                        </li>
                    }
                </ul>
            </div>
        </div>

        <h1>@(ViewBag.activity.Description)</h1>
        <h2 style="margin-top:20px;">折扣：@(ViewBag.activity.Discount) 折</h2>
        <h2 style="padding-bottom:50px;margin-top:15px;">@(ViewBag.activity.StartTime) - @(ViewBag.activity.EndTime)</h2>

        <ul id="favorite" class="am-avg-sm-4 am-thumbnails">
            @for (int i = 0; i < @ViewBag.products.Count; i++)
            {
                <li>
                    <div>
                        <div class="am-panel am-panel-default am-scrollspy-init am-scrollspy-inview am-animation-fade" data-am-scrollspy="{animation: 'fade', delay:100}">
                            <div class="am-panel-bd" style="height:165px;">
                                <a href="/Product/Show/@(ViewBag.products[i].ID)">
								@if(ViewBag.products[i].ProductImageList!=null && ViewBag.products[i].ProductImageList.Count>0){
								<img src="@(ViewBag.products[i].ProductImageList[0].Image.URL)" style="width:100%;height:100%" />
								}
                                    
                                </a>
                            </div>
                            <div class="am-panel-footer" style="padding:5px;">
                                <div>
                                    <div class="am-cf">
                                        <p class="am-align-left am-text-danger" style="margin:0;text-decoration:line-through;width:auto;">￥@(ViewBag.products[i].Price)</p>
                                        <p class="am-align-left am-text-danger" style="margin:0;">&nbsp;- ￥@(ViewBag.products[i].Price * ViewBag.activity.Discount)</p>
                                    </div>
                                    <h2 style="margin:0;"><a href="/Product/Show/@(ViewBag.products[i].ID)">@(ViewBag.products[i].Name)</a></h2>
                                    <p style="margin:0;">@(ViewBag.products[i].Description)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
