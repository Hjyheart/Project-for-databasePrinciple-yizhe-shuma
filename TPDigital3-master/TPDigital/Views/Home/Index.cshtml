
@{
    ViewBag.Title = "HomeIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{ 
    var hotpro = ViewBag.hotpro;
    var categoryList = ViewBag.categoryList;
    var normalpro = ViewBag.normalpro;
}

<!--活动巨幕-->
<div class="am-g">
    <div class="am-slider am-slider-default am-u-sm-centered" data-am-flexslider id="demo-slider-0" style="max-height:420px;max-width:1200px">
        <ul class="am-slides">
            @for (int i = 0; i < ViewBag.ActivityImage.Count; i++)
            {
                <li><a href="/Activity/Detail/@ViewBag.Activity[i].ID"><img src="@ViewBag.ActivityImage[i].URL" style="max-height:400px;" /></a></li>
            }
        </ul>
    </div>
</div>
<button class="am-btn am-btn-primary am-center" style="width:200px;height:50px;" onclick="moreActivity()">查看更多</button>
<!--热门商品-->
<hr />
<section class="am-center">
    <button class="am-btn am-btn-danger am-center" style="width:100%;">热卖</button>
    <div class="am-g am-g-fixed am-u-sm-centered">
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-md-6 am-u-md-6" data-scrollspy="{animation: 'slide-top', delay: 500}">
                <a href="/Product/Show/@hotpro[i].ID"><img class="am-img-responsive img am-center" src="@hotpro[i].ProductImageList[0].Image.URL" alt="foundation" /></a>
                <h2 class="am-text-center" onclick="choosePro()">@(hotpro[i].Name)</h2>
                <p class="am-text-center">@hotpro[i].Description</p>
            </div>
        }
    </div>
</section>
<button class="am-btn am-btn-primary am-center" style="width:200px;height:50px;" onclick="hot()">查看更多</button>
<hr />
<!--瀑布流-->
<section class="am-center">
    <button class="am-btn am-btn-success am-center" style="width:100%;">猜你喜欢</button>
    <br />
    <div class="am-g">
        @for (int i = 0; i < 5; i++)
        {
                for (int k = i * 5; k < i * 5 + 4; k++)
                {
                    <div class="am-u-sm-6 am-u-sm-centered">
                        <div>
                            <div class="am-panel am-panel-default am-scrollspy-init am-scrollspy-inview am-animation-fade" data-am-scrollspy="{animation: 'fade', delay:100}">
                                <div class="am-panel-bd">
                                    <a href="/Product/Show/@normalpro[k].ID">
                                        <img src="@normalpro[k].ProductImageList[0].Image.URL" style="width:100%;height:80%" />
                                    </a>
                                </div>
                                <div class="am-panel-footer" style="padding:5px;">
                                    <div>
                                        <div class="am-cf">
                                            <p class="am-align-left am-text-danger" style="margin:0;">￥@normalpro[k].Price</p>
                                        </div>
                                        <h2 style="margin:0;"><a href="#">@normalpro[k].Name</a></h2>
                                        <p style="margin:0;">@normalpro[k].Description</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            <br />
            <hr/>
        }
    </div>
</section>

<script src="~/Scripts/jquery.min.js"></script>
<script>
    function hot() {
        window.location = "../Product/Index";
    }
    function moreActivity() {
        window.location = "../Activity/Index"
    }
</script>


